<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
	<View android:layout_width="0dip" android:layout_height="0dip" android:focusableInTouchMode="true" />
	<org.osmdroid.views.MapView
        android:id="@+id/osmap"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"/>
	
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
            android:orientation="vertical">
		    <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" > 
			    <ImageView   
			        android:id="@+id/settings"
			        android:layout_width="wrap_content"  
			        android:layout_height="wrap_content"
			        android:padding="5dp"
			        android:src="@drawable/home_icon"
			        android:contentDescription="@null"/> 

				<EditText
				    android:id="@+id/inputAddress"
		            android:layout_width="0dp" 
		            android:layout_height="wrap_content" 
		            android:layout_weight=".70"
				    android:inputType="text"
				    android:paddingLeft="20dp"
				    android:textColor="#000000" >
				</EditText>
				<ImageView
					android:id="@+id/voiceInput"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
			        android:padding="3dp"
					android:src="@drawable/mic_52"
					android:contentDescription="@null" >
				</ImageView> 
		    </LinearLayout>
		    <LinearLayout
		        android:baselineAligned="true"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal">

				<ListView
				    android:id="@+id/listSuggestion"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="5" />

				<ListView 
					android:id="@+id/listVoiceSuggestion"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
				    android:layout_weight="1" />
			</LinearLayout>
			<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#cccccc"
	            android:orientation="horizontal" >
		    </LinearLayout>
		</LinearLayout>
</RelativeLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#CCCCCC"
        android:orientation="horizontal">
			<include layout="@layout/left_drawer"/>
        </LinearLayout>
        
        <LinearLayout
	        android:baselineAligned="false"
	        android:layout_width="300dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="right"
	        android:orientation="vertical">
			
			<include layout="@layout/right_drawer"/>
	        
		</LinearLayout>
</android.support.v4.widget.DrawerLayout>