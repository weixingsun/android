<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical" >


    <LinearLayout
        android:baselineAligned="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_height="wrap_content"
            android:background="@color/layout_popup_bg"
                android:layout_weight="2"
                android:layout_width="0dp"
            android:orientation="vertical" >

	        <TextView
	            android:id="@+id/point_brief_above"
	            android:layout_height="wrap_content"
                android:layout_width="match_parent"
	            android:layout_gravity="bottom"
	            android:text="@null"
	            android:textColor="#000099"
	            android:textSize="20sp" />
            <TextView
                android:id="@+id/point_brief"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@null"
                android:textColor="#000099"
                android:textSize="22sp" />
			
            <TextView
                android:id="@+id/point_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="#000099"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:background="@color/layout_popup_bg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical" >

        <ImageView
            android:id="@+id/ic_travel_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/navigate"
            android:src="@drawable/ic_taxi_48" />
        
			<ImageView
	            android:id="@+id/ic_delete"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:contentDescription="@string/navigate"
	            android:src="@drawable/ic_delete_32" />
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>